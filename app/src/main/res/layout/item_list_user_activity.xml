<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="@dimen/trash_type_layout_size"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_activity_image"
            android:layout_width="@dimen/activity_image_size"
            android:layout_height="@dimen/activity_image_size"
            tools:src="@color/colorAccent" />

        <ImageView
            android:layout_width="@dimen/activity_image_size"
            android:layout_height="@dimen/trash_type_circle_button_size"
            android:layout_gravity="bottom"
            android:src="@drawable/gradient_background" />

        <TextView
            android:id="@+id/user_activity_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/full_layout_padding"
            android:layout_marginRight="@dimen/full_layout_padding"
            android:padding="@dimen/half_layout_padding"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="300 m" />

        <ImageView
            android:id="@+id/user_activity_type"
            android:layout_width="@dimen/trash_type_circle_button_size_list"
            android:layout_height="@dimen/trash_type_circle_button_size_list"
            android:layout_gravity="right|end"
            android:layout_marginTop="@dimen/half_layout_padding"
            tools:background="@drawable/background_rounded_red"
            tools:padding="@dimen/half_layout_padding"
            tools:src="@drawable/ic_location" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="@dimen/text_size_medium"
            tools:text="John updated this dump as still here." />

        <TextView
            android:id="@+id/user_activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_layout_padding"
            android:padding="@dimen/button_padding"
            android:textColor="@color/text_color_grey"
            android:textIsSelectable="true"
            tools:text="21.10.2017" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_layout_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/full_layout_padding"
                android:layout_height="@dimen/full_layout_padding"
                android:src="@drawable/ic_gps"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/user_activity_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_layout_padding"
                android:layout_marginStart="@dimen/half_layout_padding"
                android:padding="@dimen/button_padding"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color_grey"
                tools:text="Milady Horadove, Prague" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color_gray"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingStart="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_nearest_collection_point_dustbin_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/badge_bg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/dashboard_collection_point_dustbin_background"
            android:orientation="vertical">

            <me.trashout.ui.SquareFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/badge_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:padding="40dp"
                    android:src="@drawable/ic_badge_sign" />

            </me.trashout.ui.SquareFrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/badge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/badge_info_btn"
                    android:layout_toStartOf="@+id/badge_info_btn"
                    android:text="Level 5" />

                <ImageView
                    android:id="@+id/badge_info_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_badge_info" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
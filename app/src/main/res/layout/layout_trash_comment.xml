<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/trash_comment_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/trash_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Comment name"
            android:layout_toRightOf="@id/trash_comment_icon"
            android:layout_toLeftOf="@id/trash_comment_date"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/trash_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Date"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/trash_comment_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:layout_marginBottom="-35dp"
        android:text="Comment body"
        android:textSize="@dimen/text_size_normal" />


</LinearLayout>
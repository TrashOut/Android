<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color_gray"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/collection_point_list_header_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder_rectangle" />

            <TextView
                android:id="@+id/news_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/news_date"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Nazev novinky"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/text_color_green"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:text="18.7.2016"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_normal" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/news_list_header_other_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp"
        android:text="@string/news.other"
        android:textSize="@dimen/text_size_xlarge" />

</LinearLayout>
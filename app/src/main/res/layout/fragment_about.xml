<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/global.aboutProject"
            android:textSize="@dimen/text_size_small" />

        <View
            style="@style/Divider.Margin"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/about_version_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/about_version_date_formatted"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_version_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/about_version_formatted"
            android:textColor="@color/text_color_grey" />

        <View
            style="@style/Divider.Margin"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about_feedback_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sides_margin"
            android:backgroundTint="@color/button_color_green_dark"
            android:text="@string/info.feedbackAndSupport"
            android:textColor="@color/text_color_white"
            app:backgroundTint="@color/button_color_green_dark" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about_faq_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sides_margin"
            android:backgroundTint="@color/button_color_green_dark"
            android:text="@string/info.frequentlyAskedQuestions"
            android:textColor="@color/text_color_white"
            app:backgroundTint="@color/button_color_green_dark" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about_support_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sides_margin"
            android:layout_marginBottom="@dimen/margin_24"
            android:backgroundTint="@color/button_color_green_dark"
            android:text="@string/info.supportUs"
            android:textColor="@color/text_color_white"
            app:backgroundTint="@color/button_color_green_dark" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about_privacy_policy_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sides_margin"
            android:backgroundTint="@color/button_color_green_dark"
            android:text="@string/info.privatePolicy"
            android:textColor="@color/text_color_white"
            app:backgroundTint="@color/button_color_green_dark" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about_terms_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sides_margin"
            android:layout_marginTop="@dimen/sides_margin"
            android:backgroundTint="@color/button_color_green_dark"
            android:text="@string/info.termsAndConditions"
            android:textColor="@color/text_color_white"
            app:backgroundTint="@color/button_color_green_dark" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
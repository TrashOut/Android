<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_trash_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/event_trash_image_state_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">


        <ImageView
            android:id="@+id/event_trash_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_image_placeholder_square" />


        <ImageView
            android:id="@+id/event_trash_status_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_trash_status_clean" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/event_trash_image_state_container"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/event_trash_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_gps"
            android:drawableLeft="@drawable/ic_gps"
            android:drawablePadding="10dp"
            android:padding="@dimen/button_padding"
            android:text="49.55454, 18.54545454"
            android:textColor="@color/text_color_grey"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/event_trash_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Bratislava region"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/event_trash_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="a year ago"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</RelativeLayout>